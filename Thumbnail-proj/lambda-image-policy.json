{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "S3ReadUploads",
            "Effect": "Allow",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::image-proc-uploads-my-tp-proj/*"
        },
        {
            "Sid": "S3WriteProcessed",
            "Effect": "Allow",
            "Action": "s3:PutObject",
            "Resource": "arn:aws:s3:::image-proc-processed-my-tp-proj/*"
        },
        {
            "Sid": "DynamoDBWrite",
            "Effect": "Allow",
            "Action": "dynamodb:PutItem",
            "Resource": "arn:aws:dynamodb:*:*:table/ImageMetadata" 
        },
        {
            "Sid": "CloudWatchLogs",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": "arn:aws:logs:*:*:*"
        }
    ]
}